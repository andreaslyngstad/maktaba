    <%= f.text_area :text %>

  <label for="author_text">Language <span class="small">(Please select a language)</span></label><br/>
    <%= f.select :language_id, current_user.languages.map{ |language| [language.name, language.id] }  %><br/>

   <button type="submit">Add post</button>

</div>  
<% end %>
