<%= form_for(@post) do |f| %>
<div class="one_coloumn">
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
        </div>
  <% end %>

    <label for="post_title">Title <span class="small">(Please write something descriptive)</span></label><br/>
    <%= f.text_field :title %>

