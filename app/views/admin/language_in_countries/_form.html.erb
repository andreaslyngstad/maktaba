
<%= form_for([:admin,@language_in_country]) do |f| %>
  <% if @language_in_country.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@language_in_country.errors.count, "error") %> prohibited this language from being saved:</h2>

      <ul>
      <% @language_in_country.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="field">
       <label for="language">Language <span class="small">(Please select a language)</span></label><br/>
        <%= f.text_field :language_name, data: {autocomplete_source: languages_path}, :id => "language_name" %>
      </div>

  <div class="field">
    <label for="author_text">Country <span class="small">(Please select a country)</span></label><br/>
    <%= f.select :country_id, Country.all.map{ |country| [country.name, country.id] }, {:include_blank => true}  %><br/>
      </div>
  <div class="field">
    <%= f.label :speakers %><br />
    <%= f.text_field :speakers_in_country %>
  </div>

  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
