<h1>Listing comments</h1>

<div class="flickr_pagination">
    <div class="page_info">
    </div>
   <%= will_paginate @comments, :container => false %>
  </div>
<table id="list_table" class="tablesorter">
  <thead>
  <tr>
    <th>Points</th>
    <th>Text</th>
    <th>Post</th>
  </tr>
   </thead>
<tbody>
<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.points %></td>
    <td><%= comment.text %></td>
    <td><%= link_to comment.post.title, admin_post_path(comment.post) %></td>
    <td><%= link_to 'Show', admin_comment_path(comment)%></td>
    <td><%= link_to 'Edit', edit_admin_comment_path(comment) %></td>
    <td><%= link_to 'Destroy', admin_comment_path(comment), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>  </tbody>
</table>
