<%= form_for(@work) do |f| %>
<div class="one_coloumn">
  <% if @work.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@work.errors.count, "error") %> prohibited this work from being saved:</h2>

      <ul>
      <% @work.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.label :title %><br />
    <%= f.text_field :title %>
	<label for="author_image">Image <span class="small">(Not required)</span></label><br />

    <%= f.file_field :cover %><br/> <br />
         <a href="#" class="is_this_a_translation">Is this a transtaion?</a><br />
    <div class="translation_fields" style="display: none;">
       <label for="work_language">Orginal Title<span class="small"></span></label><br/>
      <%= f.text_field :original_title, data: {autocomplete_source: works_path}, :id => "original_title" %>
    </div>
    <label for="work_language">Language <span class="small">(Please select a language)</span></label><br/>
    <%= f.text_field :language_name, data: {autocomplete_source: languages_path}, :id => "language_name" %>
    
 	<label for="work_author">Author <span class="small">(Please select an author)</span></label><br/>
    <%= f.text_field :author_name, data: {autocomplete_source: authors_path}, :id => "author_name" %>
    
   	<label for="work_isbn">ISBN <span class="small">(Not required)</span></label><br/>
    <%= f.text_field :number %>

     <label for="work_published">Published <span class="small">(Not required)</span></label><br/>
    <%= f.text_field :published %>
    
  	<label for="work_washlabel">Summary <span class="small">(Please add a description of the work)</span></label><br/>
    <%= f.text_area :summary %>
    <button type="submit">Add work</button>
 
  </div>
<% end %>
