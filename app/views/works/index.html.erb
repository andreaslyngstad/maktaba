<h1>Listing works</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Washlabel</th>
    <th>Language</th>
    <th>Number</th>
    <th>Published</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @works.each do |work| %>
  <tr>
    <td><%= work.title %></td>
    <td><%= work.washlabel %></td>
    <td><%= work.language_id %></td>
    <td><%= work.number %></td>
    <td><%= work.published %></td>
    <td><%= link_to 'Show', work %></td>
    <td><%= link_to 'Edit', edit_work_path(work) %></td>
    <td><%= link_to 'Destroy', work, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

